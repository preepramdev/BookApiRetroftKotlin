<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pram.bookapiretrofit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.pram.bookapiretrofit.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.pram.bookapiretrofit.activity.UpdateActivity" />
        <activity android:name="com.pram.bookapiretrofit.activity.AddActivity" />
        <activity android:name="com.pram.bookapiretrofit.activity.DetailActivity" />
        <activity android:name="com.pram.bookapiretrofit.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>